<%- include('../layout/admin/adminHeader') %> 

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupon List</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
    <style>
        .card {
            border: none;
            border-radius: 15px;
            background-color: #ffffff;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .table-responsive {
            border-radius: 15px;
            overflow: hidden;
        }
        .table thead {
            background-color: #cdc9c9;
            color: #202020;
            text-transform: uppercase;
        }
        .table th, .table td {
            padding: 1rem;
            vertical-align: middle;
            border-top: 1px solid #e1e1e1;
        }
        h1 {
            font-family: 'Montserrat', sans-serif;
            font-weight: 700;
            color: #39393a;
            margin-bottom: 1.5rem;
        }
        .btn-action {
            margin-right: 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Coupon List</h1>
        <a href="/admin/addCoupon">
            <button class="btn btn-success mb-3">Add Coupon</button>
        </a>
        
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Coupon Name</th>
                                <th>Code</th>
                                <th>Expiry Date</th>
                                <th>Discount %</th>
                                <th>Max Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (coupons.length > 0) { %>
                                <% coupons.forEach(coupon => { %>
                                    <tr>
                                        <td><%= coupon.coponName %></td>
                                        <td><%= coupon.coponCode %></td>
                                        <td><%= coupon.expiryDate.toISOString().split('T')[0] %></td>
                                        <td><%= coupon.discountPercentage %>%</td>
                                        <td>â‚¹<%= coupon.maxAmount %></td>
                                        <td>
                                            <a href="/admin/editCoupon/<%=coupon._id%>">
                                                <button class="btn btn-dark btn-sm btn-action">Edit</button>
                                            </a>
                                            <button class="btn btn-danger btn-sm delete-coupon" data-id="<%= coupon._id %>">Delete</button>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center">No coupons available.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.querySelectorAll('.delete-coupon').forEach(button => {
            button.addEventListener('click', async (event) => {
                const couponId = event.target.getAttribute('data-id');
    
                const confirmDeletion = await Swal.fire({
                    title: 'Are you sure?',
                    text: 'You won\'t be able to revert this!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                });
    
                if (confirmDeletion.isConfirmed) {
                    try {
                        const response = await fetch(`/admin/deleteCoupon/${couponId}`, {
                            method: 'DELETE',
                            headers: { 'Content-Type': 'application/json' }
                        });
    
                        const result = await response.json();
                        if (result.success) {
                            await Swal.fire({
                                title: 'Deleted!',
                                text: result.message,
                                icon: 'success',
                                timer: 2000,
                                showConfirmButton: false
                            });
                            location.reload(); 
                        } else {
                            Swal.fire({
                                title: 'Error!',
                                text: result.message,
                                icon: 'error',
                                confirmButtonText: 'OK'
                            });
                        }
                    } catch (error) {
                        console.error('Error deleting coupon:', error);
                        Swal.fire({
                            title: 'Error!',
                            text: 'An error occurred. Please try again.',
                            icon: 'error',
                            confirmButtonText: 'OK'
                        });
                    }
                }
            });
        });
    </script>    
</body>
</html>
