<%-include('../layout/admin/adminHeader')%>	
<style>
  .orders-container {
    padding: 20px;
    font-family: Arial, sans-serif;
  }
  
  .orders-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 14px;
  }
  
  .orders-table th,
  .orders-table td {
    padding: 12px 16px;
    text-align: left;
    border-bottom: 1px solid #ddd;
  }
  
  .orders-table th {
    background-color: #e3e3db;
    font-weight: 600;
  }
  
  .orders-table td {
    vertical-align: middle;
  }
  
  .btn {
    padding: 8px 16px;
    font-size: 14px;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }
  
  .btn-primary {
    background-color: #1b1c1c;
    color: #fff;
  }
  
  .btn-primary:hover {
    background-color: #3e3f3f;
  }
  
  .btn-danger {
    background-color: #e74c3c;
    color: #fff;
  }
  
  .btn-danger:hover {
    background-color: #c0392b;
  }
  
  .status-select {
    padding: 8px 12px;
    font-size: 14px;
    border: 1px solid #ddd;
    border-radius: 4px;
    background-color: #f9f9f9;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
    appearance: none;
    cursor: pointer;
  }
  
  .status-select:focus {
    border-color: #1b1c1c;
    box-shadow: 0 0 5px rgba(27, 28, 28, 0.5);
    outline: none;
  }
  
  .status-select option {
    font-size: 14px;
  }
  
  .status-select option[value="Pending"] {
    color: #f39c12;
    font-weight: bold;
  }
  
  .status-select option[value="Shipped"] {
    color: #3498db;
    font-weight: bold;
  }
  
  .status-select option[value="Delivered"] {
    color: #2ecc71;
    font-weight: bold;
  }
  
  .status-select option[value="Canceled"] {
    color: #e74c3c;
    font-weight: bold;
  }

  .status-canceled {
  color: #e74c3c;
  font-weight: bold;
}
  .status-deliverd {
  color: #1d9c16;
  font-weight: bold;
}
  </style>
  
  <div class="orders-container">

    <h2 style="color: #4f5050; font-weight: bold;">Order List </h2>

    <table class="orders-table">
      <thead>
        <tr>
          <th>#ID</th>
          <th>Name</th>
          <th>Total</th>
          <th>Date</th>
          <th>Status</th>
          <th>Method</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td><%= order._id %></td>
            <td><%= order.userName %></td>
            <td style="color: #3c3d3d; ">â‚¹<%= order.totalPrice %></td>
            <td><%= new Date(order.createdAt).toLocaleString() %></td>
            <td>
              <% if (order.status === "Cancelled") { %>
                <p class="status-canceled">Canceled</p>
              <% } else if (order.status === "Delivered") { %>
                <p class="status-deliverd">Delivered</p>
              <% } else if (order.status === "Request for returned") { %>
                <a href="/admin/orderReturnAdmin/<%=order._id%>">
                  <p class="status-deliverd">Return request</p>
                </a>
              <% } else if (order.status === "Returned") { %>
                <p class="status-returned"><strong style="color: #d34232;">Order Returned</strong></p>
              <% } else { %>
                <select class="status-select" data-id="<%= order._id %>" onchange="updateOrderStatus(this)">
                  <option value="Pending" <%= order.status === "Pending" ? "selected" : "" %>>Pending</option>
                  <option value="Shipped" <%= order.status === "Shipped" ? "selected" : "" %>>Shipped</option>
                  <option value="Delivered" <%= order.status === "Delivered" ? "selected" : "" %>>Delivered</option>
                </select>
              <% } %>
            </td>
            
            <!-- <td><input type="text" value=""></td> -->
            <td style="color: #333941; font-weight: 800;"><%=order.paymentMethod %></td>

            <td>
              <a href="/admin/productDetailPage/<%= order._id %>">
                <button class="btn btn-dark btn-detail" style="background-color: #2d2b2b;" data-id="<%= order._id %>">Detail</button>
              </a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  
  

  <script>
    function updateOrderStatus(selectElement) {
      const orderId = selectElement.getAttribute('data-id');
      const status = selectElement.value;
  
      fetch(`/orders/updateStatus/${orderId}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ status: status }),
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          window.location.reload()
        } else {
          alert("Failed to update order status.");
        }
      });
    }
  </script>
