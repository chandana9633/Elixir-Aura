<body>
    <div class="container">
        <div class="message-box">
            <% if (successMessage) { %>
                <h1>Order Canceled</h1>
                <p><%= successMessage %></p>
            <% } else if (errorMessage) { %>
                <h1>Error</h1>
                <p><%= errorMessage %></p>
            <% } %>
            <a href="/" class="home-link">Return to Homepage</a>
        </div>
    </div>
</body>
</html>
